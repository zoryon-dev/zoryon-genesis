{
  "mcpServers": {
    "github": {
      "command": "npx",
      "args": ["-y", "@anthropic-ai/mcp-server-github"],
      "env": {
        "GITHUB_TOKEN": "SEU_TOKEN_AQUI"
      },
      "_comment": "Permite gerenciar repositórios, issues e PRs no GitHub"
    }
  },
  "_instrucoes": {
    "1": "Acesse github.com/settings/tokens",
    "2": "Clique em 'Generate new token (classic)'",
    "3": "Selecione os escopos: repo, read:org",
    "4": "Copie o token gerado",
    "5": "Substitua SEU_TOKEN_AQUI",
    "6": "NÃO commite este arquivo com o token real!"
  }
}
